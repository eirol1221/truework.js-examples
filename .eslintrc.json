{
  "env": {
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:promise/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["jest"],
  "rules": {
    "indent": [0, 2],
    "linebreak-style": ["error", "unix"],
    "quotes": [0, "single"],
    "semi": ["error", "never"],
    "prettier/prettier": 2,
    "no-console": 0,
    "max-len": [1, 120, { "ignoreComments": true }]
  }
}
